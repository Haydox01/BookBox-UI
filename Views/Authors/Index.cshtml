@model IEnumerable<BookBox_UI.Models.DTO.AuthorDto>
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860

@{
}
<h1 class="mt-3">Authors</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Authors" asp-action="Add">Add Author</a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Nationality</th>
            <th> </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Id</td>
                <td>@author.Name</td>
                <td>@author.Nationality</td>
                <td>
                    <a asp-controller="Authors" asp-action="Edit" asp-route-id="@author.Id" class="btn btn-light">Edit</a>
                </td>
               
            </tr>
        }
    </tbody>
</table>